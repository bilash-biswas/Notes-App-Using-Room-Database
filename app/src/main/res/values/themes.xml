<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RoomDatabaseinKotlin" parent="Theme.AppCompat.DayNight">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/red_color</item>
         <item name="colorPrimaryVariant">@color/red_color</item>
         <item name="android:statusBarColor">@color/red_color</item>
    </style>

    <style name="Theme.RoomDatabaseinKotlin" parent="Base.Theme.RoomDatabaseinKotlin" />
